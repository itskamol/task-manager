# .env.test

# Test Database Configuration (PostgreSQL)
# Replace with your actual test database connection details
DATABASE_URL="postgresql://testuser:testpassword@localhost:5433/testdb?schema=public"

# Test Redis Configuration
# Replace with your actual test Redis connection details
REDIS_HOST="localhost"
REDIS_PORT="6380" # Different from a potential dev Redis port
REDIS_PASSWORD="" # Optional, if your test Redis requires a password

# Telegram Bot Token (Can be a mock or a dedicated test bot token)
# It's often good practice not to use the production bot token for tests.
# For some tests, this might not even be hit if services are tested directly.
TELEGRAM_BOT_TOKEN="YOUR_TEST_TELEGRAM_BOT_TOKEN"

# Application Settings
NODE_ENV="test"
PORT="3001" # Different from a potential dev port

# Logging (optional, can be configured to be less verbose for tests)
LOG_LEVEL="warn"
